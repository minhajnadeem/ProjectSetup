<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filled"
    android:padding="@dimen/dialog_default_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="@dimen/dialog_cancel_size"
            android:layout_height="@dimen/dialog_cancel_size"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dialog_horizontal_margin"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HELLO WORLD!"
            android:gravity="center"
            android:layout_below="@id/ivCancel"
            android:layout_marginBottom="@dimen/dialog_horizontal_margin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <Button
                android:id="@+id/btnNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_filled"
                android:text="no"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_button_filled"
                android:text="ok"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>